<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="ShowRecaudacionInfo">
                <t t-foreach="content" t-as="line">
                            <a  role="button" title="Recaudaciones"  tabindex="0" data-trigger="focus" data-html="true"  class="js_recaudacion_info fa fa-info-circle" t-att-index="line.index" t-att-data-content="render" style="margin-right:5px;"></a>
                </t>
            <script>
                $('.js_recaudacion_info').popover(); 
            </script>
    </t>

    <t t-name="RecaudacionPopOver">
        <div style="color:black;">
                    <td><strong><t t-esc="title"/>: </strong></td>
            <table>
                <t t-foreach="content" t-as="line">
                    <tr>
                        <i><td style="text-align:left;">- <t t-esc="line"/></td></i>
                    </tr>
                </t>
            </table>
        </div>
    </t>

</templates>