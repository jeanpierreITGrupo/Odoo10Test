<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <template id="assets_backend" name="account assets" inherit_id="account.assets_backend">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/ac_cobranza_diaria_it/static/js/recaudacion.js"></script>
            </xpath>
        </template>     




        <record id="view_recaudacion_diaria_recaudacion_form" model="ir.ui.view">
            <field name="name">recaudacion.diaria.recaudacion.form</field>
            <field name="model">recaudacion.diaria.recaudacion</field>
            <field name="arch" type="xml">
                <form string="Recaudacion Diaria">
                            <group>
                                        <field name="factura_id" readonly="1"/>
                            </group>
                </form>
            </field>
        </record>




        <record id="view_recaudacion_diaria_formasdf" model="ir.ui.view">
            <field name="name">recaudacion.diaria.form</field>
            <field name="model">recaudacion.diaria</field>
            <field name="arch" type="xml">
                <form string="Recaudacion Diaria">
                    <header>
                        <button name="recaudar" string="Recaudar" type="object"  class="oe_highlight"/>
                        <button name="validacion" string="Validar" type="object"  class="oe_highlight"/>
                        <button name="facturar" string="Emisión Odoo" type="object" class="oe_highlight" />
                        <button name="impresion" string="Impresión CPE" type="object" class="oe_highlight" />
                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="hacernada"
                                readonly="1"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bug"
                                >
                            <field name="error_recaudacion" widget="statinfo" string="Recaudación"/>
                            </button>

                            <button name="hacernada"
                                readonly="1"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bug"
                                >
                            <field name="error_validacion" widget="statinfo" string="Validación"/>
                            </button>

                            <button name="hacernada"
                                readonly="1"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bug"
                                >
                            <field name="error_emision_odoo" widget="statinfo" string="Emisión Odoo"/>
                            </button>

                            <button name="hacernada"
                                readonly="1"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bug"
                                >
                            <field name="error_nubefact" widget="statinfo" string="NubeFact"/>
                            </button>

                            <button name="hacernada"
                                readonly="1"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-bug"
                                >
                            <field name="error_pagar" widget="statinfo" string="Pagos"/>
                            </button>
                        </div>

                    <div class="oe_title">                      
                        <h1>
                            <strong>Recaudación Diaria: </strong>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <notebook>
                        <page string="Recaudado">
                            <group>

                                <field name="recaudacion_ids" nolabel="1" readonly="1">
                                    <tree decoration-it="state in ('recaudado','validado')"
                                        decoration-bf="state in ('emitido','nubefact')"
                                        decoration-info="state == 'pagado'"

                                        editable="top" create="0" delete="0">
                                        <field name="id_recaudacion" readonly="1"/>
                                        <field name="codigo_estudiante" readonly="1"/>
                                        <field name="alumno" readonly="1"/>
                                        <field name="nombre_servicio" readonly="1"/>
                                        <field name="cuenta_producto" readonly="1"/>
                                        <field name="num_op" readonly="1"/>
                                        <field name="saldo" readonly="1"/>
                                        <field name="serie" readonly="1"/>
                                        <field name="numero" readonly="1"/>
                                        <field name="estado_comprobante" readonly="1"/>
                                        <field name="fecha_pago" readonly="1"/>
                                        <field name="cod_interno_pago" readonly="1"/>
                                        <field name="tipo_doc" readonly="1"/>
                                        <field name="serie_odoo" readonly="1"/>
                                        <field name="num_odoo" readonly="1"/>
                                        <field name="factura_id" readonly="1"/> 
                                        <field name="state" readonly="1"/>                                       
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Error Recaudado">
                            <group>
                                <field name="errores_recaudacion_ids" nolabel="1" readonly="1">
                                    <tree editable="top" create="0" delete="0" decoration-info='state!=False'>
                                        <field name="error_recaudacion_json" string="Error" widget="recaudacion_error_tree" readonly="1"/>
                                        <field name="id_recaudacion" readonly="1"/>
                                        <field name="codigo_estudiante" readonly="1"/>
                                        <field name="alumno" readonly="1"/>
                                        <field name="nombre_servicio" readonly="1"/>
                                        <field name="cuenta_producto" readonly="1"/>
                                        <field name="num_op" readonly="1"/>
                                        <field name="saldo" readonly="1"/>
                                        <field name="serie" readonly="1"/>
                                        <field name="numero" readonly="1"/>
                                        <field name="estado_comprobante" readonly="1"/>
                                        <field name="fecha_pago" readonly="1"/>
                                        <field name="cod_interno_pago" readonly="1"/>
                                        <field name="tipo_doc" readonly="1"/>
                                        <field name="serie_odoo" readonly="1"/>
                                        <field name="num_odoo" readonly="1"/>
                                        <field name="factura_id" readonly="1"/>   
                                        <field name="state" invisible="1" />                                     
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Error Validado">
                            <group>
                                <field name="errores_validacion_ids" nolabel="1" readonly="1">
                                    <tree editable="top" create="0" delete="0" decoration-info='state!=False'>
                                        <field name="error_validacion_json" string="Error" widget="recaudacion_error_tree" readonly="1"/>
                                        <field name="id_recaudacion" readonly="1"/>
                                        <field name="codigo_estudiante" readonly="1"/>
                                        <field name="alumno" readonly="1"/>
                                        <field name="nombre_servicio" readonly="1"/>
                                        <field name="cuenta_producto" readonly="1"/>
                                        <field name="num_op" readonly="1"/>
                                        <field name="saldo" readonly="1"/>
                                        <field name="serie" readonly="1"/>
                                        <field name="numero" readonly="1"/>
                                        <field name="estado_comprobante" readonly="1"/>
                                        <field name="fecha_pago" readonly="1"/>
                                        <field name="cod_interno_pago" readonly="1"/>
                                        <field name="tipo_doc" readonly="1"/>
                                        <field name="serie_odoo" readonly="1"/>
                                        <field name="num_odoo" readonly="1"/>
                                        <field name="factura_id" readonly="1"/>    
                                        <field name="state" invisible="1" />                                    
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Error Emisión">
                            <group>
                                <field name="errores_emision_odoo_ids" nolabel="1" readonly="1">
                                    <tree editable="top" create="0" delete="0" decoration-info='state!=False'>
                                        <field name="error_emision_odoo_json" string="Error" widget="recaudacion_error_tree" readonly="1"/>
                                        <field name="id_recaudacion" readonly="1"/>
                                        <field name="codigo_estudiante" readonly="1"/>
                                        <field name="alumno" readonly="1"/>
                                        <field name="nombre_servicio" readonly="1"/>
                                        <field name="cuenta_producto" readonly="1"/>
                                        <field name="num_op" readonly="1"/>
                                        <field name="saldo" readonly="1"/>
                                        <field name="serie" readonly="1"/>
                                        <field name="numero" readonly="1"/>
                                        <field name="estado_comprobante" readonly="1"/>
                                        <field name="fecha_pago" readonly="1"/>
                                        <field name="cod_interno_pago" readonly="1"/>
                                        <field name="tipo_doc" readonly="1"/>
                                        <field name="serie_odoo" readonly="1"/>
                                        <field name="num_odoo" readonly="1"/>
                                        <field name="factura_id" readonly="1"/>  
                                        <field name="state" invisible="1" />                                      
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Error NubeFact">
                            <group>
                                <field name="errores_nubefact_ids" nolabel="1" readonly="1">
                                    <tree editable="top" create="0" delete="0" decoration-info='state!=False'>
                                        <field name="error_nubefact_json" string="Error" widget="recaudacion_error_tree" readonly="1"/>
                                        <field name="id_recaudacion" readonly="1"/>
                                        <field name="codigo_estudiante" readonly="1"/>
                                        <field name="alumno" readonly="1"/>
                                        <field name="nombre_servicio" readonly="1"/>
                                        <field name="cuenta_producto" readonly="1"/>
                                        <field name="num_op" readonly="1"/>
                                        <field name="saldo" readonly="1"/>
                                        <field name="serie" readonly="1"/>
                                        <field name="numero" readonly="1"/>
                                        <field name="estado_comprobante" readonly="1"/>
                                        <field name="fecha_pago" readonly="1"/>
                                        <field name="cod_interno_pago" readonly="1"/>
                                        <field name="tipo_doc" readonly="1"/>
                                        <field name="serie_odoo" readonly="1"/>
                                        <field name="num_odoo" readonly="1"/>
                                        <field name="factura_id" readonly="1"/>  
                                        <field name="state" invisible="1" />                                      
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Error Pago">
                            <group>
                                <field name="errores_pagar_ids" nolabel="1" readonly="1">
                                    <tree editable="top" create="0" delete="0" decoration-info='state!=False'>
                                        <field name="error_pagar_json" string="Error" widget="recaudacion_error_tree" readonly="1"/>
                                        <field name="id_recaudacion" readonly="1"/>
                                        <field name="codigo_estudiante" readonly="1"/>
                                        <field name="alumno" readonly="1"/>
                                        <field name="nombre_servicio" readonly="1"/>
                                        <field name="cuenta_producto" readonly="1"/>
                                        <field name="num_op" readonly="1"/>
                                        <field name="saldo" readonly="1"/>
                                        <field name="serie" readonly="1"/>
                                        <field name="numero" readonly="1"/>
                                        <field name="estado_comprobante" readonly="1"/>
                                        <field name="fecha_pago" readonly="1"/>
                                        <field name="cod_interno_pago" readonly="1"/>
                                        <field name="tipo_doc" readonly="1"/>
                                        <field name="serie_odoo" readonly="1"/>
                                        <field name="num_odoo" readonly="1"/>
                                        <field name="factura_id" readonly="1"/>  
                                        <field name="state" invisible="1" />                                      
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_recaudacion_diaria_tree" model="ir.ui.view">
            <field name="name">recaudacion.diaria.tree</field>
            <field name="model">recaudacion.diaria</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Recaudacion Diaria">
                    <field name="name"/>
                    <field name="error_recaudacion" />
                    <field name="error_validacion" />
                    <field name="error_emision_odoo" />
                    <field name="error_nubefact" />
                    <field name="error_pagar" />
                </tree>
            </field>
        </record>


        <record id="recaudacion_diaria_action" model="ir.actions.act_window">
            <field name="name">Recaudacion Diaria</field>
            <field name="res_model">recaudacion.diaria</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Procesos" id="proceso_edusoft_menu"
        parent="ac_partner_student_it.academico_menu_padre"  sequence="1" />

        <menuitem name="Recaudacion Diaria" id="menu_recaudacion_diaria" action="recaudacion_diaria_action" parent="proceso_edusoft_menu"  sequence="1" />




        <record id="view_banco_recaudacion_tree" model="ir.ui.view">
            <field name="name">banco.recaudacion.tree</field>
            <field name="model">banco.recaudacion</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Banco" editable="bottom">
                    <field name="banco_edusoft"  required="1"/>
                    <field name="diario"  required="1"/>
                </tree>
            </field>
        </record>


        <record id="banco_recaudacion_action" model="ir.actions.act_window">
            <field name="name">Bancos</field>
            <field name="res_model">banco.recaudacion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>


        <menuitem name="Bancos" id="menu_bancos_recaudacion" action="banco_recaudacion_action" parent="ac_update_from_server.configuracion_sub_menu"  sequence="1" />





        <record id="view_serie_recaudacion_tree" model="ir.ui.view">
            <field name="name">serie.recaudacion.tree</field>
            <field name="model">serie.recaudacion</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Series" editable="bottom">
                    <field name="serie_edusoft" required="1"/>
                    <field name="tipo_doc"  required="1"/>
                    <field name="serie_odoo"  required="1"/>
                </tree>
            </field>
        </record>


        <record id="seroe_recaudacion_action" model="ir.actions.act_window">
            <field name="name">Series</field>
            <field name="res_model">serie.recaudacion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>


        <menuitem name="Series" id="menu_series_recaudacion" action="seroe_recaudacion_action" parent="ac_update_from_server.configuracion_sub_menu"  sequence="2" />




        <record id="view_product_product_recaudacion_tree" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Servicios">
                    <field name="default_code"/>
                    <field name="name"/>
                    <field name="property_account_income_id" />
                </tree>
            </field>
        </record>


        <record id="recaudacion_product" model="ir.actions.act_window">
            <field name="name">Servicios</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('servicio_edusoft', '!=', False)]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_product_product_recaudacion_tree')}),
                          ]"/>
           
        </record>


        <menuitem name="Servicios" id="menu_servicios_recaudacion" action="recaudacion_product" parent="ac_update_from_server.configuracion_sub_menu"  sequence="3" />

    </data>
</odoo>
