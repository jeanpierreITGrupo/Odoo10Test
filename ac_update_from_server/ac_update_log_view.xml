<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_ac_update_log_form" model="ir.ui.view">
            <field name="name">ac.update.log.form</field>
            <field name="model">ac.update.log</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Sincronizacion de estudiantes">
                    <header>
                        <!--<button name="sincronizar_with_server" string="Actualizar" type="object" attrs="{'invisible':[('situation','=',True)]}" class="oe_highlight" />-->
                        <button name="sincronizar_with_server" string="Actualizar" type="object" class="oe_highlight" />
                    </header>
                    <group>
                        <field name="date" readonly="1"/>
                        <field name="msj" readonly="1" style="color: red;"/>
                        <field name="situation" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Errores" readonly="1" attrs="{'invisible':[('situation','=',True)]}">
                            <field name="update_log_downs">
                                <tree name="errores_tree">
                                    <field name="state"/>
                                    <field name="nombres"/>
                                    <field name="ape_pat"/>
                                    <field name="nro_doc"/>
                                    <field name="codigo"/>
                                    <field name="pais_nac"/>
                                    <field name="direccion"/>
                                    <field name="nombres_apo"/>
                                    <field name="ape_pat_apo"/>
                                    <field name="nro_doc_apo"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_ac_update_log_tree" model="ir.ui.view">
            <field name="name">ac.update.log.tree</field>
            <field name="model">ac.update.log</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Sincronizacion de estudiantes">
                    <field name="date"/>
                    <field name="msj"/>
                    <field name="registros"/>
                    <field name="situation"/>
                </tree>
            </field>
        </record>

         <record id="view_ac_update_log_filter" model="ir.ui.view">
            <field name="name">ac.update.log.select</field>
            <field name="model">ac.update.log</field>
            <field name="arch" type="xml">
                <search string="Search Log">
                   <filter string="date"/>
               </search>
            </field>
        </record>

        <record id="ac_update_log_action2" model="ir.actions.act_window">
            <field name="name">Sincronizacion de estudiantes</field>
            <field name="res_model">ac.update.log</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

